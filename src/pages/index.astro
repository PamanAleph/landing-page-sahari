---
import Layout from "../layouts/Layout.astro";
import info1Image from "../assets/info1image.png";
import info2Image from "../assets/info2image.jpg";
import trustImage from "../assets/trustimage.png";

import Indonesia from "../assets/indonesia.png";
import Malaysia from "../assets/malaysia.png";
import China from "../assets/china.png";
import Japan from "../assets/japan.png";
import Philipines from "../assets/philipines.png";
import Singapore from "../assets/singapore.png";
import SouthKorea from "../assets/south_korea.png";
import Taiwan from "../assets/taiwan.png";
import Thailand from "../assets/thailand.png";
import "@/styles/global.css";
import Marquee from "@/components/ui/marquee";
import OrbitingCircles from "@/components/ui/orbiting-circles";
import SahariFriends from "@/assets/friends.png";
import SahariMemory from "@/assets/memory.png";
import SahariMemoryPlus from "@/assets/memory+.png";
import Sahari from "@/assets/sahari.png";

const countries = [
  { name: "Indonesia", image: Indonesia, isMain: true },
  { name: "China", image: China, isMain: false },
  { name: "Japan", image: Japan, isMain: false },
  { name: "Singapore", image: Singapore, isMain: false },
  { name: "South Korea", image: SouthKorea, isMain: false },
  { name: "Taiwan", image: Taiwan, isMain: false },
  { name: "Thailand", image: Thailand, isMain: false },
];

const stats = [
  { title: "Total Sales", value: "$4.8m" },
  { title: "Total Talents", value: "10" },
  { title: "Official Addons", value: "24" },
  { title: "Downloads", value: "86k" },
];
---

<Layout title="VioletVision">
  <main class="z-50 bg-transparent py-6 px-10 md:px-40">
    <!-- HEADER -->
    <header class="flex items-center relative">
      <span class="text-white text-lg md:text-2xl">VioletVision</span>
      <button
        id="hamburger"
        class="md:hidden text-white absolute right-0 text-xl"
      >
        ☰
      </button>
      <ul class="hidden md:flex gap-4 text-slate-300 mt-2 ml-20" id="menu">
        <li><a href="/about" class="hover:text-white">About</a></li>
        <li><a href="/blog" class="hover:text-white">Blog</a></li>
        <li><a href="/contact" class="hover:text-white">Contact</a></li>
        <div class="absolute top-0 right-0 text-slate-300">
          <span class="cursor-pointer hover:text-white">Login</span>
          <button
            class="cursor-pointer rounded-lg bg-gradient-to-r from-violet-950 via-zinc-700 to-yellow-900 p-0.5 ml-5 hover:shadow-md transition-shadow hover:shadow-black/50"
          >
            <div
              class="flex items-center justify-center bg-neutral-950 back rounded-lg"
            >
              <h1 class="text-white px-2 py-1">Create account</h1>
            </div>
          </button>
        </div>
      </ul>
    </header>

    <section class="mt-24">
      <h1
        class="text-[3rem] md:text-[4rem] text-white w-full text-left md:w-[60rem] font-bold mt-10 px-4 md:px-0"
      >
        Connect, Share, and Thrive with
        <p
          class="bg-gradient-to-r from-violet-600 to-orange-400 text-transparent bg-clip-text"
        >
          SAHARI <span
            class="bg-gradient-to-r text-transparent bg-clip-text from-violet-600 to-orange-400"
            >APP</span
          >
        </p>
      </h1>

      <h2
        class="text-slate-300 mt-4 md:mt-10 text-center md:text-left text-lg md:text-xl w-full md:w-[60rem] px-4 md:px-0"
      >
        We are Sahari, your trusted platform for meaningful connections.
        Offering safe companionship and AI-driven experiences, we’re committed
        to helping you feel connected and supported.
      </h2>

      <div class="mt-10 flex justify-center">
        <button>
          <a
            href="#"
            class="bg-blue-600 hover:bg-blue-700 text-lg md:text-xl font-semibold text-white px-8 md:px-16 py-2 rounded-lg mt-6 w-full md:w-auto justify-center flex items-center gap-2"
          >
            Connect with Us
          </a>
        </button>
      </div>

      {/* Negara yang menjadi tujuan kami  */}
      <div class="mt-24 text-center">
        <h2 class="text-2xl font-bold text-white">
          Available Offline Services in Selected Countries
        </h2>
        <p class="mt-4 text-slate-300 px-4 md:px-0">
          At Sahari, we provide safe and meaningful connections across various
          countries. Here are the regions where our services are currently
          available:
        </p>

        {/* Desktop View */}
        <div class="hidden md:block overflow-hidden w-full mt-10 px-0">
          <div class="flex space-x-8 justify-center">
            {
              countries.map((country) => (
                <div class={`flex-shrink-0`}>
                  <img
                    src={country.image.src}
                    alt={country.name}
                    class={`aspect-video h-14 object-fit transition duration-300 ${country.isMain ? "" : "filter grayscale"}`}
                  />
                  <div class="mt-2 text-slate-300">
                    <span class="font-semibold">{country.name}</span>
                  </div>
                </div>
              ))
            }
          </div>
        </div>

        <div class="md:hidden flex space-x-24 mt-10 overflow-hidden">
          <Marquee pauseOnHover className="[--duration:20s]">
            {
              countries.map((country) => (
                <div class="flex-shrink-0">
                  <img
                    src={country.image.src}
                    alt={country.name}
                    class={`aspect-video h-14 object-fit transition duration-300 ${country.isMain ? "" : "filter grayscale"}`}
                  />
                  <div class="mt-2 text-slate-300">
                    <span class="font-semibold">{country.name}</span>
                  </div>
                </div>
              ))
            }
          </Marquee>
        </div>
      </div>
    </section>

    <div class="w-full font-bold mt-10 md:mt-24 px-4 md:px-0 text-slate-300">
      <div class="mx-auto max-w-3xl text-center">
        <h2 class="text-3xl font-bold sm:text-4xl">
          Trusted by eCommerce Businesses
        </h2>
        <p class="mt-4 sm:text-xl">
          Join us and experience a platform designed to foster genuine
          connections.
        </p>
      </div>

      <dl
        class="mt-6 grid grid-cols-1 gap-4 sm:mt-8 sm:grid-cols-2 lg:grid-cols-4"
      >
        {
          stats.map((stat) => (
            <div class="flex flex-col rounded-lg border border-gray-100 px-4 py-8 text-center">
              <dt class="order-last text-lg font-medium">{stat.title}</dt>
              <dd class="text-4xl font-extrabold text-[#7F56D9] md:text-5xl">
                {stat.value}
              </dd>
            </div>
          ))
        }
      </dl>
    </div>
  </main>
</Layout>

<section>
  <div class="text-center mt-10 md:mt-24 py-6 px-10 md:px-40">
    <h2 class="text-4xl font-bold text-white">
      Discover New Experiences with SAHARI
    </h2>
    <p class="text-lg text-white mt-4">
      Explore our unique services designed to enrich your life. From virtual
      companionship to unforgettable experiences, SAHARI offers innovative
      solutions for your social and entertainment needs. With top-tier features,
      we are here to bridge every precious moment, wherever you are.
    </p>
  </div>
  <div
    class="relative flex h-[650px] w-full flex-col items-center justify-center overflow-hidden rounded-lg md:shadow-xl"
  >
    <span
      class="absolute top-44 pointer-events-none whitespace-pre-wrap bg-gradient-to-b from-[#D5A6FF] via-[#AE70FE] to-[#7431FF] bg-clip-text text-center text-8xl font-semibold leading-none text-transparent"
    >
      SAHARI
    </span>

    {/* Inner Circles */}
    <OrbitingCircles
      className="size-32 border-none bg-transparent"
      duration={20}
      delay={20}
      radius={110}
    >
      <img src={Sahari.src} alt="Sahari Service Icons" />
    </OrbitingCircles>
    <OrbitingCircles
      className="size-36 border-none bg-transparent"
      duration={20}
      delay={10}
      radius={110}
    >
      <img src={SahariFriends.src} alt="Sahari Service Icons" />
    </OrbitingCircles>

    {/* Outer Circles (reverse) */}
    <OrbitingCircles
      className="size-40 border-none bg-transparent"
      radius={240}
      duration={20}
      reverse
    >
      <img src={SahariMemory.src} alt="Sahari Service Icons" />
    </OrbitingCircles>
    <OrbitingCircles
      className="size-44 border-none bg-transparent"
      radius={240}
      duration={20}
      delay={20}
      reverse
    >
      <img src={SahariMemoryPlus.src} alt="Sahari Service Icons" />
    </OrbitingCircles>
  </div>
</section>

